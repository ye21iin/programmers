select
    to_char(sales_date,'YYYY-MM-DD') as sales_date, 
    product_id, user_id, sum(sales_amount) as sales_amount
from online_sale
where to_char(sales_date,'YYYY-MM-DD') like '2022-03%'
group by to_char(sales_date,'YYYY-MM-DD'), product_id, user_id

union all

select
    to_char(sales_date,'YYYY-MM-DD') as sales_date, 
    product_id, 
    null as user_id,
    sum(sales_amount) as sales_amount
from offline_sale
where to_char(sales_date,'YYYY-MM-DD') like '2022-03%'
group by to_char(sales_date,'YYYY-MM-DD'), product_id

order by 1, 2, 3
